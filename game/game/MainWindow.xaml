<Window x:Class="game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="530" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Background="DarkGray" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="GamePlace" HorizontalAlignment="Center" Height="400" Width="500" Margin="0,50,0,0" VerticalAlignment="Top" Background="Black"/>
        <Label Content="Время:" HorizontalAlignment="Left" Margin="15,8,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TimePlay" HorizontalAlignment="Left" Height="23" Margin="64,11,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>

    </Grid>
    
</Window>
    
